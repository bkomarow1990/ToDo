@model ToDoModel
@{
    ViewData["Title"] = "Create ToDo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <form method="post" asp-action="Create" >
<div class="d-flex flex-column create_todo">
        <div class="d-flex">
            <label asp-for="Title"></label>
            <input asp-for="Title" />
        </div>
        <div class="d-flex">
            <label asp-for="FromDate"></label>
            <input asp-for="FromDate" />
        </div>
        <div class="d-flex">
            <label asp-for="DoneDate"></label>
            <input asp-for="DoneDate" />
        </div>
        <div class="d-flex">
            <label asp-for="ToDate"></label>
            <input asp-for="ToDate" />
        </div>
        <div>
            <input type="submit" class="btn btn-success" value="Create" />
        </div>
</div>
    </form>